{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SmallSimpleApiClient": {
    "BaseUrl": "http://localhost:5000",
    "Headers": {
      "X-SECURITY-HEADER": "SOME-SECRET-PASSWORD"
    }
  },
  "SmallSimpleServiceSettings": {
    "DeleteAccountAfterUpdates": 10,
    "SleepPeriodInMilliseconds": 1000
  },
  "HttpPolicies": {
    "WaitAndRetryCount": 2,
    "CircuitBreakerRetryCount": 3,
    "CircuitBreakerDuration": "0:00:10"
  }
}